<p style="color: green"><%= notice %></p>

<h1>Your Nutrition Logs</h1>
<div>
  <%= link_to "New nutrition log", new_nutrition_log_path %>
</div>
<div>
  <p class="font-weight-bold">Calories by Log</p>
  <%= line_chart current_user.nutrition_logs.group(:created_at).average(:calories_current) %>
  <p class="font-weight-bold">Sleep by Log</p>
  <%= line_chart current_user.nutrition_logs.group(:created_at).average(:sleep_current) %>
  <p class="font-weight-bold">Protein by Log</p>
  <%= line_chart current_user.nutrition_logs.group(:created_at).average(:protein_current) %>
</div>
<hr class="hr hr-blurry" />
<div id="nutrition_logs">
  <% @nutrition_logs.each do |nutrition_log| %>
    <%= render nutrition_log %>
    <p>
      <%= link_to "Show this nutrition log", nutrition_log %>
    </p>
    <hr class="hr hr-blurry" />
  <% end %>
</div>

