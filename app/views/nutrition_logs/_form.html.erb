<%= form_with(model: nutrition_log) do |form| %>
  <% if nutrition_log.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(nutrition_log.errors.count, "error") %> prohibited this nutrition_log from being saved:</h2>

      <ul>
        <% nutrition_log.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_email %>
    <%= form.text_field :user_email, value: current_user.email, readonly: true %>
  </div>
