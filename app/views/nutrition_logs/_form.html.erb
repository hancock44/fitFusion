  <div>
    <%= form.label :calories_current, style: "display: block" %>
    <%= form.number_field :calories_current %>
  </div>

  <div>
    <%= form.label :sleep_current, style: "display: block" %>
    <%= form.text_field :sleep_current %>
  </div>

  <div>
    <%= form.label :protein_current, style: "display: block" %>
    <%= form.number_field :protein_current %>
  </div>

  <div>
    <%= form.label :calories_min, style: "display: block" %>
    <%= form.number_field :calories_max %>
  </div>

  <div>
    <%= form.label :sleep_max, style: "display: block" %>
    <%= form.text_field :sleep_min %>
  </div>

  <div>
    <%= form.label :protein_min, style: "display: block" %>
    <%= form.number_field :protein_min %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
