<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <div>
      <%= render post %>
      <%= link_to "Show this post", post %>
      <%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
